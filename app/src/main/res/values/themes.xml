<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Amoled theme -->
    <style name="AppTheme.Amoled" parent="AppTheme">
        <item name="colorToolbar">@android:color/black</item>
        <item name="colorCard">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="materialCardViewStyle">@style/CardView.Amoled</item>
        <item name="alertDialogTheme">@style/AlertDialog.Amoled</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog.Amoled</item>
        <item name="mainToolbarStyle">@style/Toolbar.Amoled</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog.Amoled</item>
    </style>

    <!-- CardView -->
    <style name="CardView.Amoled" parent="Widget.MaterialComponents.CardView">
        <item name="cardStrokeWidth">2dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@drawable/stroke_color</item>
        <item name="cardBackgroundColor">#000</item>
    </style>

    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardStrokeWidth">0dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">100dp</item>
        <item name="android:elevation">10dp</item>
        <item name="cardBackgroundColor">@color/colorCard</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/toolbar_background</item>
    </style>

    <style name="Toolbar.Amoled" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/toolbar_background_amoled</item>
    </style>

    <!-- Bottom sheet dialog -->
    <style name="BottomSheetDialog.Amoled" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:backgroundTint">#000</item>
    </style>

    <style name="BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/colorCard</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/BottomSheetRounded</item>
    </style>

    <style name="BottomSheetRounded" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/AppShapeAppearance.MediumComponent</item>
    </style>

    <!-- Alert dialog -->
    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorSurface">@color/colorCard</item>
        <item name="shapeAppearance">@style/AppShapeAppearance.MediumComponent</item>
    </style>
    <style name="AlertDialog.Amoled" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorSurface">@android:color/black</item>
        <item name="shapeAppearance">@style/AppShapeAppearance.MediumComponent</item>
    </style>
</resources>